# Writing Mentor Framework - Configuration File
# Copy this file to your project folder as `wmf-config.yaml` and customize

# Path to the framework installation (where skills/, scripts/, references/ live)
# Use absolute path or ~ for home directory
framework_path: ~/writing-mentor-framework

# Writing guidelines and evaluation criteria (relative to this config file's location)
guidelines: guidelines.md
criteria: criteria.md

# Optional: Domain-specific concepts file for enhanced assumption validation
# If not specified, the framework will look for domain_concepts.md in the current folder
# or use general principles only
domain_concepts: null  # or: domain_concepts.md, economics_concepts.md, etc.

# Submission handling
submissions:
  # Folder containing submissions (relative to this config file)
  folder: submissions

  # For multi-round reviews, specify the round structure
  # If rounds is null, treats submissions/ as a flat folder
  rounds:
    enabled: false
    # When enabled, expects: submissions/round1/, submissions/round2/, etc.
    # Set to true to use round-based subfolder structure

# Output folders (relative to this config file)
# These are created automatically during review
output:
  extracted: feedback_extracted      # Extracted text from submissions
  rendered: feedback_rendered       # Rendered Excel charts
  feedback: feedback                # Generated feedback files

# Optional: Similarity reports folder
similarity_reports: similarity_reports  # or null if not using

# Review settings
review:
  # Maximum number of parallel review agents
  # - Default: 3 (good balance of speed and reliability)
  # - Set to 1 if you experience issues (rate limits, system resources)
  # - Set higher (5-10) for large batches with hundreds of submissions
  max_parallel_agents: 3

  # For resubmissions: compare to prior round's feedback
  # Set to the round number to compare against (e.g., 1 for round 2 reviews)
  compare_to_round: null
